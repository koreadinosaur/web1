  function sum(left, right){
  document.write(left + right);
  }
 sum(2,3)
</script>
<script>
  function sumcolor(left, right){
  document.write('<div style="color:red">'+(left+right)+'</div>');
  }
 sumcolor(2,3)
</script>

<script>
  function sumreturn(left, right){
  return left + right;
  }
  document.write('<div style="color:blue">'+sumreturn(2,6)+'</div>')
</script>


